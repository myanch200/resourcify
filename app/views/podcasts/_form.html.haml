= form_with(model: podcast) do |form|
  - if podcast.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(podcast.errors.count, "error")
        prohibited this podcast from being saved:
      %ul
        - podcast.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :descrption, style: "display: block"
    = form.text_area :descrption
  %div
    = form.submit
